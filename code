    <script>
        const covers = [
'https://i.gifer.com/en/B3gx',
            'https://i.gifter.com/9BDf',
            'https://i.gifer.com/ITel.gif',
            'https://i.gifer.com/IW1q.gif'
        ];
        function setRandomCover() {
            const coverEl = document.getElementById('randomCover');
            const randomImg = covers[Math.floor(Math.random() * covers.length)];
            coverEl.style.backgroundImage = `linear-gradient(to bottom, transparent, var(--bg)), url('${randomImg}')`;
        }
        setRandomCover();
        const music = document.getElementById('bgMusic');
        let isStarted = false;
        document.body.addEventListener('click', () => {
            if (!isStarted) {
                music.play().then(() => isStarted = true).catch(e => {});
            }
        }, { once: false });
        async function sendMessage() {
            const input = document.getElementById('userInput');
            const box = document.getElementById('chatBox');
            const text = input.value.trim();
            if (!text) return;
            box.innerHTML += `<div class="bubble user-bubble">${text}</div>`;
            input.value = '';
            box.scrollTop = box.scrollHeight;
            const aiId = "ai-" + Date.now();
            box.innerHTML += `<div class="bubble ai-bubble" id="${aiId}">...</div>`;
            box.scrollTop = box.scrollHeight;
            try {
                const res = await fetch(`https://urangkapolka.vercel.app/api/chatgpt4?prompt=${encodeURIComponent(text)}`);
                const data = await res.json();
                document.getElementById(aiId).innerText = data.answer || data.reply || data.response || "No response.";
            } catch (e) {
                document.getElementById(aiId).innerText = "❌ Error connecting.";
            }
            box.scrollTop = box.scrollHeight;
        }
    </script>
